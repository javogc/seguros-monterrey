  .modal-dialog
    /! Modal content
    .modal-content
      .modal-header
        button.close data-dismiss="modal" type="button"  &times;
        h4.modal-title Agregar Dependecias
      .modal-body
      	.row
      		.col-md-12
      			table.table
      				thead
      					th
      				tbody.dep_list
      	.row
      		.col-md-3
      			a.btn.btn-default#register_dependencies href="#" role="button" Save Dependencies

      .modal-footer
        button.btn.btn-default data-dismiss="modal" type="button"  Close

